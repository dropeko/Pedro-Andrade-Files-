print('-=-'*10)
print(' CONTANDO VOGAIS EM TUPLAS')
print('-=-'*10)
palavras = ('APRENDER', 'PROGRAMAR', 'SONHO', 'EVOLUIR', 'ESTUDAR', 'PRATICAR', 'ENSINAR',
            'MERCADO', 'TRABALHAR', 'FUTURO', 'TECNOLOGIA', 'PYTHON', 'RECICLAR', )
for p in palavras:
    print(f'\nNa palavra {p.upper()} temos ', end='')
    for letra in p:
        if letra.lower() in 'aeiou':
            print(letra, end=' ')
